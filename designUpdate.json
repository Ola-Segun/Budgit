{
  "designSystem": {
    "metadata": {
      "appName": "TrackFinz",
      "targetAudience": "Teens",
      "designLanguage": "Modern, friendly, illustrative",
      "platform": "Mobile-first (iOS/Android)"
    },
    
    "colorPalette": {
      "primary": {
        "main": "#2DD4BF",
        "light": "#5EEAD4",
        "dark": "#14B8A6",
        "usage": "Primary actions, active states, brand identity"
      },
      "semantic": {
        "success": "#2DD4BF",
        "warning": "#FCD34D",
        "danger": "#EF4444",
        "info": "#3B82F6"
      },
      "neutral": {
        "background": "#FAFAFA",
        "surface": "#FFFFFF",
        "surfaceElevated": "#F5F5F5",
        "border": "#E5E7EB",
        "divider": "#F3F4F6"
      },
      "text": {
        "primary": "#1F2937",
        "secondary": "#6B7280",
        "tertiary": "#9CA3AF",
        "inverse": "#FFFFFF"
      },
      "categoryColors": {
        "teal": "#2DD4BF",
        "orange": "#F97316",
        "purple": "#8B5CF6",
        "pink": "#EC4899",
        "cyan": "#06B6D4",
        "blue": "#3B82F6",
        "black": "#1F2937",
        "green": "#10B981"
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "Inter",
        "fallback": "SF Pro Display, Roboto, sans-serif"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "scale": {
        "hero": {
          "fontSize": 48,
          "lineHeight": 1.2,
          "fontWeight": 700,
          "letterSpacing": -1.5,
          "usage": "Splash screens, major headings"
        },
        "h1": {
          "fontSize": 28,
          "lineHeight": 1.3,
          "fontWeight": 700,
          "letterSpacing": -0.5,
          "usage": "Screen titles"
        },
        "h2": {
          "fontSize": 22,
          "lineHeight": 1.3,
          "fontWeight": 600,
          "letterSpacing": -0.3,
          "usage": "Section headers"
        },
        "h3": {
          "fontSize": 18,
          "lineHeight": 1.4,
          "fontWeight": 600,
          "letterSpacing": 0,
          "usage": "Card titles, subsections"
        },
        "body": {
          "fontSize": 16,
          "lineHeight": 1.5,
          "fontWeight": 400,
          "letterSpacing": 0.15,
          "usage": "Main content"
        },
        "bodySmall": {
          "fontSize": 14,
          "lineHeight": 1.5,
          "fontWeight": 400,
          "letterSpacing": 0.25,
          "usage": "Secondary text, descriptions"
        },
        "caption": {
          "fontSize": 12,
          "lineHeight": 1.4,
          "fontWeight": 400,
          "letterSpacing": 0.4,
          "usage": "Timestamps, metadata"
        },
        "currency": {
          "fontSize": 36,
          "lineHeight": 1.2,
          "fontWeight": 700,
          "letterSpacing": -1,
          "fontFeatures": ["tabular-nums"],
          "usage": "Large amounts, balances"
        },
        "currencyMedium": {
          "fontSize": 20,
          "lineHeight": 1.3,
          "fontWeight": 600,
          "fontFeatures": ["tabular-nums"],
          "usage": "Transaction amounts"
        }
      }
    },
    
    "spacing": {
      "baseUnit": 4,
      "scale": {
        "xs": 4,
        "sm": 8,
        "md": 12,
        "lg": 16,
        "xl": 24,
        "2xl": 32,
        "3xl": 48,
        "4xl": 64
      },
      "components": {
        "screenPadding": 16,
        "cardPadding": 16,
        "buttonPaddingVertical": 14,
        "buttonPaddingHorizontal": 24,
        "inputPaddingVertical": 12,
        "inputPaddingHorizontal": 16,
        "listItemSpacing": 12,
        "sectionSpacing": 24
      }
    },
    
    "borderRadius": {
      "scale": {
        "sm": 8,
        "md": 12,
        "lg": 16,
        "xl": 20,
        "2xl": 24,
        "full": 9999
      },
      "components": {
        "button": 12,
        "card": 16,
        "input": 12,
        "modal": 24,
        "bottomSheet": 24,
        "categoryIcon": 12,
        "avatar": 9999
      }
    },
    
    "shadows": {
      "none": "none",
      "sm": {
        "offsetY": 1,
        "blur": 2,
        "color": "rgba(0, 0, 0, 0.05)"
      },
      "md": {
        "offsetY": 2,
        "blur": 8,
        "color": "rgba(0, 0, 0, 0.08)"
      },
      "lg": {
        "offsetY": 4,
        "blur": 16,
        "color": "rgba(0, 0, 0, 0.12)"
      },
      "usage": {
        "cards": "md",
        "buttons": "none",
        "modals": "lg",
        "floating": "lg"
      }
    },
    
    "components": {
      "buttons": {
        "primary": {
          "backgroundColor": "#1F2937",
          "textColor": "#FFFFFF",
          "borderRadius": 12,
          "paddingVertical": 14,
          "paddingHorizontal": 24,
          "fontSize": 16,
          "fontWeight": 600,
          "shadow": "none",
          "states": {
            "hover": {
              "backgroundColor": "#111827"
            },
            "pressed": {
              "scale": 0.98
            },
            "disabled": {
              "backgroundColor": "#E5E7EB",
              "textColor": "#9CA3AF"
            }
          }
        },
        "secondary": {
          "backgroundColor": "#F3F4F6",
          "textColor": "#1F2937",
          "borderRadius": 12,
          "paddingVertical": 14,
          "paddingHorizontal": 24,
          "fontSize": 16,
          "fontWeight": 600
        },
        "icon": {
          "size": 48,
          "iconSize": 24,
          "backgroundColor": "transparent",
          "borderRadius": 12
        }
      },
      
      "cards": {
        "standard": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": 16,
          "padding": 16,
          "shadow": "md",
          "border": "none"
        },
        "elevated": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": 16,
          "padding": 16,
          "shadow": "lg"
        },
        "transaction": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": 16,
          "padding": 12,
          "layout": "horizontal",
          "iconSize": 48,
          "iconBorderRadius": 12,
          "gap": 12
        },
        "goal": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": 16,
          "padding": 16,
          "progressBarHeight": 8,
          "progressBarRadius": 9999
        }
      },
      
      "inputs": {
        "textField": {
          "backgroundColor": "#FFFFFF",
          "borderColor": "#E5E7EB",
          "borderWidth": 1.5,
          "borderRadius": 12,
          "paddingVertical": 12,
          "paddingHorizontal": 16,
          "fontSize": 16,
          "placeholderColor": "#9CA3AF",
          "states": {
            "focused": {
              "borderColor": "#2DD4BF",
              "borderWidth": 2
            },
            "error": {
              "borderColor": "#EF4444"
            }
          }
        },
        "numericKeypad": {
          "layout": "3x4",
          "buttonSize": 72,
          "buttonBorderRadius": 12,
          "buttonBackgroundColor": "#F3F4F6",
          "buttonSpacing": 12,
          "fontSize": 24,
          "fontWeight": 600,
          "specialButtons": [".", "0", "backspace"]
        },
        "pinInput": {
          "digitCount": 4,
          "digitSize": 56,
          "digitBorderRadius": 12,
          "digitBorder": "1.5px solid #E5E7EB",
          "digitSpacing": 12,
          "fontSize": 24,
          "fontWeight": 600,
          "filledState": {
            "borderColor": "#2DD4BF"
          }
        }
      },
      
      "categoryIcons": {
        "size": 48,
        "iconSize": 24,
        "borderRadius": 12,
        "backgroundColor": "categoryColor + 20% opacity or solid",
        "iconColor": "categoryColor or white",
        "layout": "centered"
      },
      
      "progressBars": {
        "linear": {
          "height": 8,
          "borderRadius": 9999,
          "backgroundColor": "#E5E7EB",
          "fillColor": "#2DD4BF",
          "animated": true,
          "animationDuration": 800
        },
        "circular": {
          "strokeWidth": 12,
          "size": 120,
          "backgroundColor": "#E5E7EB",
          "fillColor": "#2DD4BF",
          "showPercentage": true,
          "centerText": {
            "fontSize": 28,
            "fontWeight": 700
          }
        }
      },
      
      "bottomSheets": {
        "backgroundColor": "#FFFFFF",
        "borderTopLeftRadius": 24,
        "borderTopRightRadius": 24,
        "dragHandle": {
          "width": 32,
          "height": 4,
          "backgroundColor": "#E5E7EB",
          "borderRadius": 2,
          "marginTop": 12,
          "marginBottom": 8
        },
        "padding": 16,
        "maxHeight": "90vh"
      },
      
      "tabs": {
        "segmentedControl": {
          "backgroundColor": "#F3F4F6",
          "borderRadius": 12,
          "padding": 4,
          "tabBorderRadius": 8,
          "tabPadding": 12,
          "selectedBackgroundColor": "#FFFFFF",
          "selectedTextColor": "#1F2937",
          "unselectedTextColor": "#6B7280",
          "fontSize": 14,
          "fontWeight": 600,
          "shadow": "sm"
        }
      },
      
      "illustrations": {
        "style": "hand-drawn, friendly, minimal",
        "colorScheme": "teal primary with black/white",
        "usage": "onboarding, empty states, confirmations",
        "size": "medium to large (200-300px)",
        "placement": "centered, above text"
      },
      
      "lists": {
        "itemHeight": "auto",
        "itemPadding": 12,
        "itemBorderRadius": 16,
        "itemBackgroundColor": "#FFFFFF",
        "itemSpacing": 8,
        "dividerColor": "none",
        "swipeActions": {
          "edit": {
            "backgroundColor": "#3B82F6",
            "icon": "edit"
          },
          "delete": {
            "backgroundColor": "#EF4444",
            "icon": "delete"
          }
        }
      }
    },
    
    "layouts": {
      "screenStructure": {
        "header": {
          "height": 56,
          "backgroundColor": "transparent",
          "elevation": 0,
          "backButton": {
            "position": "left",
            "size": 40,
            "icon": "chevron-left"
          },
          "title": {
            "alignment": "left",
            "fontSize": 22,
            "fontWeight": 600,
            "marginLeft": 8
          },
          "actions": {
            "alignment": "right",
            "iconSize": 24
          }
        },
        "content": {
          "padding": 16,
          "backgroundColor": "#FAFAFA"
        },
        "bottomNavigation": {
          "height": 72,
          "backgroundColor": "#FFFFFF",
          "elevation": "lg",
          "itemCount": 4,
          "iconSize": 24,
          "labelFontSize": 12,
          "selectedColor": "#2DD4BF",
          "unselectedColor": "#6B7280"
        }
      },
      
      "modalPatterns": {
        "fullScreen": {
          "backgroundColor": "#FFFFFF",
          "transition": "slide-up",
          "closeButton": "top-left",
          "duration": 300
        },
        "bottomSheet": {
          "maxHeight": "90vh",
          "borderTopRadius": 24,
          "backdrop": "rgba(0, 0, 0, 0.5)",
          "dismissible": true,
          "dragToClose": true
        },
        "dialog": {
          "maxWidth": 340,
          "borderRadius": 20,
          "padding": 24,
          "illustration": "top-centered",
          "title": {
            "fontSize": 20,
            "fontWeight": 700,
            "marginTop": 16
          },
          "message": {
            "fontSize": 14,
            "color": "#6B7280",
            "marginTop": 8,
            "textAlign": "center"
          },
          "actions": {
            "layout": "horizontal",
            "gap": 12,
            "marginTop": 24
          }
        }
      },
      
      "formPatterns": {
        "stackedFields": {
          "gap": 16,
          "labelPosition": "top",
          "labelMarginBottom": 8
        },
        "inlineActions": {
          "layout": "horizontal",
          "gap": 12,
          "distribution": "equal-width"
        },
        "slideToConfirm": {
          "height": 56,
          "borderRadius": 12,
          "backgroundColor": "#F3F4F6",
          "thumbSize": 48,
          "thumbBorderRadius": 8,
          "thumbBackgroundColor": "#1F2937",
          "thumbIcon": "chevron-right",
          "thumbIconColor": "#FFFFFF",
          "labelText": "Slide to Save",
          "labelColor": "#6B7280",
          "slideDistance": "90%"
        }
      }
    },
    
    "animations": {
      "durations": {
        "fast": 150,
        "normal": 300,
        "slow": 500
      },
      "curves": {
        "standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
        "decelerate": "cubic-bezier(0.0, 0.0, 0.2, 1)",
        "accelerate": "cubic-bezier(0.4, 0.0, 1, 1)",
        "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)"
      },
      "patterns": {
        "fadeIn": {
          "duration": 300,
          "opacity": "0 to 1"
        },
        "slideUp": {
          "duration": 300,
          "translateY": "20px to 0"
        },
        "scaleIn": {
          "duration": 300,
          "scale": "0.95 to 1",
          "curve": "spring"
        },
        "buttonPress": {
          "duration": 150,
          "scale": "1 to 0.98"
        },
        "progressFill": {
          "duration": 800,
          "curve": "decelerate"
        }
      }
    },
    
    "iconography": {
      "style": "outline with rounded corners",
      "strokeWidth": 2,
      "sizes": {
        "xs": 16,
        "sm": 20,
        "md": 24,
        "lg": 32,
        "xl": 48
      },
      "commonIcons": {
        "navigation": ["home", "budget-pie", "savings-piggy", "profile-user"],
        "actions": ["add", "edit", "delete", "search", "filter"],
        "financial": ["wallet", "money-bill", "credit-card", "piggy-bank", "chart"],
        "categories": ["shopping-bag", "food-utensils", "entertainment-film", "transport-car", "home-house"]
      }
    },
    
    "accessibility": {
      "minTouchTarget": 48,
      "minFontSize": 14,
      "colorContrast": {
        "minimum": 4.5,
        "enhanced": 7
      },
      "focusIndicator": {
        "visible": true,
        "color": "#2DD4BF",
        "width": 2,
        "offset": 2
      },
      "semanticLabels": "required for all interactive elements",
      "screenReaderSupport": "full"
    },
    
    "responsiveness": {
      "breakpoints": {
        "mobile": 0,
        "tablet": 768,
        "desktop": 1024
      },
      "scaling": {
        "mobile": "1x (base)",
        "tablet": "1.2x typography, 1.5x spacing",
        "desktop": "1.3x typography, 2x spacing"
      },
      "layoutAdaptation": {
        "mobile": "single-column, bottom-navigation",
        "tablet": "two-column where appropriate, side-navigation option",
        "desktop": "multi-column, persistent side-navigation"
      }
    },
    
    "dataVisualization": {
      "charts": {
        "barChart": {
          "barWidth": 24,
          "barBorderRadius": 8,
          "barColor": "#2DD4BF",
          "spacing": 16,
          "axisColor": "#E5E7EB",
          "gridLines": "horizontal only",
          "gridColor": "#F3F4F6",
          "labelFontSize": 12,
          "labelColor": "#6B7280"
        },
        "lineChart": {
          "strokeWidth": 3,
          "strokeColor": "#2DD4BF",
          "dotSize": 6,
          "fillGradient": "teal to transparent",
          "gridLines": true
        },
        "pieChart": {
          "strokeWidth": 0,
          "centerHole": true,
          "centerHoleSize": "40%",
          "segmentSpacing": 2,
          "labelPosition": "inside"
        }
      }
    },
    
    "stateManagement": {
      "loading": {
        "skeleton": {
          "backgroundColor": "#F3F4F6",
          "highlightColor": "#E5E7EB",
          "animationDuration": 1500,
          "borderRadius": "match component"
        },
        "spinner": {
          "size": 24,
          "strokeWidth": 3,
          "color": "#2DD4BF"
        }
      },
      "empty": {
        "illustration": true,
        "illustrationSize": 200,
        "title": {
          "fontSize": 20,
          "fontWeight": 600,
          "marginTop": 24
        },
        "message": {
          "fontSize": 14,
          "color": "#6B7280",
          "marginTop": 8
        },
        "action": {
          "button": true,
          "marginTop": 24
        }
      },
      "error": {
        "backgroundColor": "#FEE2E2",
        "textColor": "#991B1B",
        "borderRadius": 12,
        "padding": 16,
        "icon": "alert-circle",
        "iconColor": "#EF4444"
      },
      "success": {
        "backgroundColor": "#D1FAE5",
        "textColor": "#065F46",
        "icon": "check-circle",
        "iconColor": "#10B981"
      }
    }
  }
}