{
  "designSystem": {
    "metadata": {
      "appName": "Modern Budget Tracker",
      "designPhilosophy": "Hybrid approach combining TrackFinz's friendly, teen-focused aesthetic with Pink App's clean minimalism",
      "coreValues": [
        "Approachable yet professional",
        "Visual clarity with personality",
        "Data-driven with emotional engagement",
        "Minimal without being sterile"
      ],
      "targetAudience": "Young adults (18-35) seeking financial empowerment",
      "platform": "Mobile-first (iOS/Android), Web-ready"
    },
    
    "colorPalette": {
      "primary": {
        "main": "#14B8A6",
        "light": "#5EEAD4",
        "dark": "#0F766E",
        "accent": "#2DD4BF",
        "usage": "Primary actions, success states, brand identity",
        "rationale": "Teal from TrackFinz as it's more unique and optimistic than pink"
      },
      "secondary": {
        "main": "#EC4899",
        "light": "#F9A8D4",
        "dark": "#DB2777",
        "usage": "Accents, highlights, income indicators",
        "rationale": "Pink as secondary adds warmth and energy"
      },
      "tertiary": {
        "main": "#8B5CF6",
        "light": "#C4B5FD",
        "dark": "#6D28D9",
        "usage": "Premium features, special highlights"
      },
      "semantic": {
        "success": "#10B981",
        "successLight": "#D1FAE5",
        "warning": "#F59E0B",
        "warningLight": "#FEF3C7",
        "error": "#EF4444",
        "errorLight": "#FEE2E2",
        "info": "#3B82F6",
        "infoLight": "#DBEAFE"
      },
      "neutral": {
        "white": "#FFFFFF",
        "background": "#F8FAFC",
        "backgroundAlt": "#F1F5F9",
        "surface": "#FFFFFF",
        "surfaceElevated": "#FFFFFF",
        "border": "#E2E8F0",
        "borderSubtle": "#F1F5F9",
        "overlay": "rgba(15, 23, 42, 0.6)"
      },
      "text": {
        "primary": "#0F172A",
        "secondary": "#475569",
        "tertiary": "#94A3B8",
        "disabled": "#CBD5E1",
        "inverse": "#FFFFFF",
        "link": "#14B8A6"
      },
      "categoryColors": {
        "food": "#F97316",
        "transport": "#3B82F6",
        "shopping": "#EC4899",
        "entertainment": "#8B5CF6",
        "health": "#10B981",
        "utilities": "#06B6D4",
        "housing": "#6366F1",
        "education": "#FBBF24",
        "personal": "#F59E0B",
        "business": "#14B8A6",
        "savings": "#10B981",
        "investment": "#8B5CF6"
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "Inter",
        "display": "Inter",
        "monospace": "JetBrains Mono",
        "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "scale": {
        "hero": {
          "fontSize": 56,
          "lineHeight": 1.1,
          "fontWeight": 800,
          "letterSpacing": -2.5,
          "usage": "Splash screens, major brand moments"
        },
        "display": {
          "fontSize": 40,
          "lineHeight": 1.2,
          "fontWeight": 700,
          "letterSpacing": -1.5,
          "usage": "Large balance displays, key metrics"
        },
        "h1": {
          "fontSize": 28,
          "lineHeight": 1.25,
          "fontWeight": 700,
          "letterSpacing": -0.8,
          "usage": "Screen titles"
        },
        "h2": {
          "fontSize": 22,
          "lineHeight": 1.3,
          "fontWeight": 600,
          "letterSpacing": -0.4,
          "usage": "Section headers, card titles"
        },
        "h3": {
          "fontSize": 18,
          "lineHeight": 1.4,
          "fontWeight": 600,
          "letterSpacing": -0.2,
          "usage": "Subsection headers"
        },
        "body": {
          "fontSize": 16,
          "lineHeight": 1.5,
          "fontWeight": 400,
          "letterSpacing": 0,
          "usage": "Main content"
        },
        "bodyMedium": {
          "fontSize": 16,
          "lineHeight": 1.5,
          "fontWeight": 500,
          "letterSpacing": 0,
          "usage": "Emphasized body text"
        },
        "bodySmall": {
          "fontSize": 14,
          "lineHeight": 1.5,
          "fontWeight": 400,
          "letterSpacing": 0.1,
          "usage": "Secondary information"
        },
        "caption": {
          "fontSize": 12,
          "lineHeight": 1.4,
          "fontWeight": 400,
          "letterSpacing": 0.4,
          "usage": "Timestamps, metadata, hints"
        },
        "overline": {
          "fontSize": 11,
          "lineHeight": 1.4,
          "fontWeight": 600,
          "letterSpacing": 1.2,
          "textTransform": "uppercase",
          "usage": "Labels, tags, categories"
        },
        "currency": {
          "fontSize": 32,
          "lineHeight": 1.2,
          "fontWeight": 700,
          "letterSpacing": -1,
          "fontFeatures": ["tabular-nums"],
          "usage": "Transaction amounts"
        },
        "currencyLarge": {
          "fontSize": 48,
          "lineHeight": 1.1,
          "fontWeight": 700,
          "letterSpacing": -2,
          "fontFeatures": ["tabular-nums"],
          "usage": "Balance displays, goals"
        }
      }
    },
    
    "spacing": {
      "baseUnit": 4,
      "scale": {
        "0": 0,
        "1": 4,
        "2": 8,
        "3": 12,
        "4": 16,
        "5": 20,
        "6": 24,
        "8": 32,
        "10": 40,
        "12": 48,
        "14": 56,
        "16": 64
      },
      "semantic": {
        "screenPaddingHorizontal": 16,
        "screenPaddingVertical": 16,
        "cardPadding": 16,
        "cardPaddingLarge": 20,
        "listItemPadding": 12,
        "sectionGap": 24,
        "componentGap": 16,
        "tightGap": 8,
        "buttonPaddingVertical": 14,
        "buttonPaddingHorizontal": 24,
        "iconTextGap": 12,
        "stackGap": 16
      }
    },
    
    "borderRadius": {
      "values": {
        "none": 0,
        "xs": 6,
        "sm": 8,
        "md": 12,
        "lg": 16,
        "xl": 20,
        "2xl": 24,
        "3xl": 28,
        "full": 9999
      },
      "semantic": {
        "button": 12,
        "buttonLarge": 14,
        "card": 16,
        "cardLarge": 20,
        "input": 12,
        "modal": 24,
        "bottomSheet": 24,
        "categoryIcon": 12,
        "avatar": 9999,
        "badge": 8,
        "chip": 8
      }
    },
    
    "elevation": {
      "shadows": {
        "none": "none",
        "xs": {
          "offsetY": 1,
          "blur": 2,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.04)"
        },
        "sm": {
          "offsetY": 2,
          "blur": 4,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.06)"
        },
        "md": {
          "offsetY": 3,
          "blur": 8,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.08)"
        },
        "lg": {
          "offsetY": 4,
          "blur": 12,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.1)"
        },
        "xl": {
          "offsetY": 8,
          "blur": 24,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.12)"
        }
      },
      "usage": {
        "card": "sm",
        "cardHover": "md",
        "button": "none",
        "buttonElevated": "sm",
        "modal": "xl",
        "fab": "lg",
        "dropdown": "md"
      }
    },
    
